<h1>Create a New Restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
    <%= f.button :submit %>
<% end %>

<%= link_to 'Back to Restaurant List', restaurants_path %>
